---
import { t, changeLanguage } from "i18next";
import { LanguageSelector } from "astro-i18next/components";
import Layout from "../layouts/Layout.astro";

changeLanguage("en");

const title = "Sergio Segrera";
---

<Layout title={title} description={t("home.description")}>
  <main class="flex h-screen w-screen flex-col bg-stone-50 p-8">
    <LanguageSelector class="bg-stone-50 place-self-end rounded-none" />
    <section
      class="flex h-full w-full flex-col items-center justify-center gap-5"
    >
      <h1 class="text-7xl">
        {t("home.header")}<strong>Sergio Segrera</strong>.
      </h1>
      <h2 class="text-2xl font-bold">{t("home.subheader")}</h2>
    </section>
  </main>
</Layout>
